{
  "appId": "com.redsquare.screens",
  "productName": "RedSquare Screens",
  "description": "Display and manage RedSquare digital advertising screens",
  "author": {
    "name": "RedSquare",
    "email": "support@redsquare.app"
  },
  "compression": "maximum",
  "removePackageScripts": true,
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "!dist/**/*.map",
    "!**/*.ts",
    "!src",
    "!electron/tsconfig.json",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "directories": {
    "buildResources": "assets",
    "output": "release"
  },
  "win": {
    "target": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "icon": "public/icon-512x512.png",
    "compression": "maximum",
    "requestedExecutionLevel": "asInvoker",
    "publisherName": "RedSquare"
  },
  "mac": {
    "target": [
      {
        "target": "dmg", 
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon-512x512.png",
    "compression": "maximum",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": {
      "target": "AppImage",
      "arch": ["x64"]
    },
    "icon": "public/icon-512x512.png",
    "compression": "maximum",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RedSquare Screens",
    "include": "build/installer.nsh"
  },
  "dmg": {
    "title": "RedSquare Screens ${version}",
    "icon": "public/icon-512x512.png",
    "background": "assets/dmg-background.png",
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}